<h4><span class="glyphicon  glyphicon-record " style=" position:relative ;height  :20px;top :3px;" /> 当前位置: @Html.ActionLink("首页", "Index", "Home", new { }, new { style = "color:blue;" })>>采购入库>>采购入库登记</h4>
<!-- 搜索区域  -->
<div class="row" style="padding-bottom: 20px;margin-top:20px;">
    <!-- 搜索框的长度为该行的3/4  -->
    <div class="col-md-5 " style=" left :550px;">
        <div class="input-group">
            <input id="searchString" type="text" style="height:28px;" class="form-control" placeholder="请输入想要搜索的内容">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info" onclick="search()" onkeypress="Enter()" style=" left :10px;top :-2px;width :80px;height :30px;text-align :center ;padding-bottom :25px;">
                    <span class="glyphicon glyphicon-search" aria-hidden="true" />
                    搜索
                </button>
            </span>
        </div>
    </div>
</div>

<p style=" position :relative ;left :870px;">
    <button style="background-color: orange ;">@Html.ActionLink("新增申请", "Create")</button>
</p>
<table class="table" border="0" cellspacing="0" cellpadding="0" style=" width :auto ;text-align :center ;">
    <tr>
        <th style=" width:45px;text-align :center ;">
            @*@Html.DisplayNameFor(model => model.Code)*@
            夹具代码
        </th>
        @*工夹具Code对应的Name*@
        <th style=" width:40px;">
            @* @Html.DisplayNameFor(model => model.Jig.Name)*@
            夹具名称
        </th>

        <th style=" width:55px;text-align :center ;">
            @* @Html.DisplayNameFor(model => model.SeqID)*@
            夹具序列号
        </th>
        <th style=" width:180px;text-align :center ;">
            @*@Html.DisplayNameFor(model => model.BillNo)*@
            采购单据号
        </th>
        <th style=" width:60px;text-align :center ;">
            @* @Html.DisplayNameFor(model => model.RegDate)*@
            入库日期
        </th>
        <th style=" width:80px;text-align :center ;">
            @*  @Html.DisplayNameFor(model => model.Location)*@
            存放库位
        </th>
        <th style=" width:60px;text-align :center ;">
            @*@Html.DisplayNameFor(model => model.State)*@
            状态
        </th>
        <th style=" width:60px;text-align :center ;">
            @* @Html.DisplayNameFor(model => model.AddDate)*@
            创建日期
        </th>
        <th style=" width:100px;text-align :center ;">
            @* @Html.DisplayNameFor(model => model.BackNote)*@
            退回原因
        </th>
        <th style=" width:200px;text-align :center  ;">
            操作
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>

            @*工夹具Code对应的Name*@
            <td>
                @Html.DisplayFor(modelItem => item.Jig.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SeqID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td style=" width:100px;text-align :center ;">
                @Html.DisplayFor(modelItem => item.BackNote)
            </td>

            <td style=" text-align :left ;">
                @Html.ActionLink("编辑", "Edit", new { id = item.ItemID }, new { @class = "btn btn-success" })|
                @Html.ActionLink("明细", "Details", new { id = item.ItemID }, new { @class = "btn btn-info" })|
                @Html.ActionLink("删除", "Delete", new { id = item.ItemID }, new { @class = "btn btn-danger" })
               
            </td>
        </tr>
    }
</table>




